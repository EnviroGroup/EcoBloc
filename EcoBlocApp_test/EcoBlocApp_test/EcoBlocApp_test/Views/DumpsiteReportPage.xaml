<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.DumpsiteReportPage"
             xmlns:local="clr-namespace:EcoBlocApp_test.ViewModels"
             Title="Report Dumpsite">

<report name="Dumpsite Report" DTDVersion="9.0.2.0.0">


    <ContentPage.BindingContext>
        <local:ReportPageViewModel/>
    </ContentPage.BindingContext>
     <layout>
      <section name="main">
         <field x:name="image_source"
                 
                 source="image_source"
                lineColor="black"
                 fillColor=""  
        ItemsSource="{Binding Source={StaticResource ReportPageViewModel}}"/>
          <field name="report_date"
                binding source="report_date"
                formatMask="MM/DD/RR"
        ItemsSource="{Binding Source={StaticResource ReportPageViewModel}}"/>
      </section>
   </layout>
</report>
    <ScrollView>
    <StackLayout>
        <Image x:Name="image" />
            <Button Text="upload pic" Clicked="Button_Clicked" CornerRadius="25" BackgroundColor="#25d366"/>
    </StackLayout>

    </ScrollView>

</ContentPage>
