<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.DumpsiteReportPage"
             BackgroundColor="Transparent"
             Title="Report Dumpsite"             
             BackgroundImageSource="gradient2.jpg"/>

<ContentPage.DumpsiteReportPage>
        <local:ReportPageViewModel/>
    </ContentPage.DumpsiteReportPage>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <Frame>
            <StackLayout>

                <Button Text="Locate the Dumpsite" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding GetLocationCommand}"/>
            <Label Text="Dumpsite Image:" VerticalOptions="StartAndExpand" Grid.Row="1" Grid.Column="0"/>
                <Button Text="Upload" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding GetImageCommand}"/>
                <Image Source="{Binding Image}" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="2" HeightRequest="200" WidthRequest="300" Aspect="AspectFit" Grid.Column="0" Grid.ColumnSpan="2" 
                      Margin="10" BackgroundColor="LightGray"/>
               
</StackLayout>
        </Frame>
        <Grid Row="0" Grid.ColumnSpan="2" Margin="10"  IsClippedToBounds="False" />
        <ScrollView>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                <StackLayout Grid.Row="3" Grid.ColumnSpan="2" >

                    <Label Text="Types of waste at site:" Padding="5" TextColor="Black" FontSize="Medium" FontAttributes="Bold" />

                    <StackLayout Orientation="Horizontal">
                        <BoxView
                     BackgroundColor="LightGray"
             CornerRadius="10"
             WidthRequest="160"
             HeightRequest="160"
             VerticalOptions="Center"
             HorizontalOptions="Center" />
                        <StackLayout>
                            <Label
                              Text ="CLick On Type" Padding="5" TextColor="Black" FontSize="Medium" FontAttributes="Bold" />
                            
                        </StackLayout>
                        
                        <CheckBox  Color="ForestGreen" IsChecked="{Binding Rubble}" />
                        <Label Text="Rubble" Padding="5" HorizontalOptions="End" FontSize="17" FontAttributes="Bold"/>
                        <CheckBox x:Name="Rubble" />
                        <Label Text="Click">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                     Binding="{Binding Source={x:Reference Rubble}, Path=IsChecked}"
                     Value="true">
                                    <Setter Property="FontAttributes"
                    Value="Italic, Bold" />
                                    <Setter Property="FontSize"
                    Value="Large" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <CheckBox  Color="ForestGreen" IsChecked="{Binding Ewaste}"/>
                        <Label Text="Ewaste" Padding="5" HorizontalOptions="End" FontSize="17" FontAttributes="Bold"/>
                        <CheckBox x:Name="Ewaste" />
                        <Label Text="Click">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                     Binding="{Binding Source={x:Reference Ewaste}, Path=IsChecked}"
                     Value="true">
                                    <Setter Property="FontAttributes"
                    Value="Italic, Bold" />
                                    <Setter Property="FontSize"
                    Value="Large" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <CheckBox  Color="ForestGreen" IsChecked="{Binding Plastic}"/>
                        <Label Text="Plastic" Padding="5" HorizontalOptions="End" FontSize="17" FontAttributes="Bold"/>
                        <CheckBox x:Name="Plastic" />
                        <Label Text="Click">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                     Binding="{Binding Source={x:Reference Plastic}, Path=IsChecked}"
                     Value="true">
                                    <Setter Property="FontAttributes"
                    Value="Italic, Bold" />
                                    <Setter Property="FontSize"
                    Value="Large" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </StackLayout>

                </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <CheckBox  Color="ForestGreen" IsChecked="{Binding Mixture}"/>
                        <Label Text="Mixture" Padding="5" HorizontalOptions="End" FontSize="17" FontAttributes="Bold"/>
                    <CheckBox x:Name="Mixture" />
                    <Label Text="Click">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label"
                     Binding="{Binding Source={x:Reference Mixture}, Path=IsChecked}"
                     Value="true">
                                <Setter Property="FontAttributes"
                    Value="Italic, Bold" />
                                <Setter Property="FontSize"
                    Value="Large" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </StackLayout>
                <Grid>




                    <Label Text="Comment:" Grid.Row="4" Grid.Column="0"/>
                    <Entry  Text="{Binding Comment}" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
                    



                </Grid>
                </Grid>
            </ScrollView>

      



        <Button Text="Report" Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand"   CornerRadius="25" BackgroundColor="#25d366" Command="{Binding ReportCommand}"/>
        <Button Text="Cancel" Grid.Row="1" Grid.Column="1" HorizontalOptions="FillAndExpand"   CornerRadius="25" BackgroundColor="#25d366" Command="{Binding CancelCommand}"/>
       
        


    
</Grid>
<ContentPage>
