<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.GeneralInformation"
             Title="General Information" BackgroundImageSource="Gradient.jpg">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20" Orientation="Vertical" Spacing="20">


             <Button Text="Identifying Different Types of Waste"
                     Command="{Binding IDWasteCommand}" HeightRequest="70" 
                     CornerRadius="50" 
                     FontSize="Medium"
                     FontAttributes="Bold" TextColor="White" BackgroundColor="#25d366"/>
             <Button Text="Disposing Different Types of Waste"
                     Command="{Binding DisposeWasteCommand}" HeightRequest="70" 
                     CornerRadius="50" 
                     FontSize="Medium" 
                     FontAttributes="Bold" TextColor="White" BackgroundColor="#25d366"/>
                               <!-- <Button Text="Solid Waste Management"
                                         Command="{Binding WasteManagementCommand}"/> -->



        </StackLayout>
    </ContentPage.Content>
</ContentPage>