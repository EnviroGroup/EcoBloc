<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.Marker_detail_page"
             xmlns:local="clr-namespace:EcoBlocApp_test.ViewModels">

    

   
        <StackLayout>
            <Frame BackgroundColor="#25d366" Padding="10" CornerRadius="0">
                <Label Text="Map Marker Detailed Page" FontSize="Large" TextColor="Black" HorizontalOptions="Center"/>


            </Frame>
            <Label Text="{Binding DemoText}" />
            <Button Text="Location Name" BackgroundColor="#25d366" Command="{Binding TestButtonCommand}" HorizontalOptions="Center"/>



            <Image Source="maps.png"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />



            <Label Text="Location Information"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <Label Text="Dumping hotspots in the Leonsdale area is of great concern with regard to hygiene, and knowing we have rubbish bin collection three times a week, you would think it would be clean, however, it is not so."
               FontSize="20"
               FontAttributes="None"
               HorizontalOptions="Center" 
               Margin="10, 0" />



        </StackLayout>

   

</ContentPage>
