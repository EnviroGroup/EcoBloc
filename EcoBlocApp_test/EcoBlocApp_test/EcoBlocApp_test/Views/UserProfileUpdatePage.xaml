<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.UserProfileUpdatePage"
             x:Class="EcoBlocApp_test.Views.RegisterPage"
             x:Class="EcoBlocApp_test.Views.LoginPage"
             xmlns:local="clr-namespace:EcoBlocApp_test.ViewModels">
    

    <ContentPage.BindingContext>
        <local:UserProfileUpdatePage/>
    </ContentPage.BindingContext>

    <publishProfile
    profileName="ProfileName"
    publishMethod="FTP"
    publishUrl="ftp://ftp.Eco_Bloc:"
    ftpPassiveMode="True"
    userName="some_ftp_user"
        x:Text="{Binding UserName}" Placeholder="{Binding userName}"
    userPWD="some_ftp_pwd"
         x:Name="Password" Text="{Binding Password}" Placeholder="{Binding userPWD}"   
    SQLServerDBConnectionString="server=contoso-mssql;uid=db_user;pwd=db_pwd;database=some_db"
    mySQLDBConnectionString="server=contoso-mysql;uid=db_user;pwd=db_pwd;database=some_db"
    Text="Email:"
       x: Text="{Binding Email}" Placeholder="{Binding Text}"  
        />
    </publishData>
    <Button Text="Edit" Clicked="Button_Clicked" CornerRadius="25" BackgroundColor="#25d366"/>
    <Label Text="{Binding _UserProfilePage}" Margin="10" FontSize="Medium" FontAttributes="Bold"/>
</ContentView>