<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoBlocApp_test.Views.EventTemplate"
             xmlns:local="clr-namespace:EcoBlocApp_test.ViewModels"
             Title="Event Details"
             BackgroundColor="#98FB98">


    <ContentPage.Content>


        <ScrollView>
            <StackLayout  Padding="0" >

                <Grid>
                    <StackLayout >
                        <Frame HasShadow="True" HeightRequest="150" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Padding="0">
                            <Image Source ="{Binding DumpsiteImage}" Aspect="AspectFill"  TranslationY="-20"/>
                        </Frame>

                    </StackLayout>
                    <StackLayout Margin="15,100,15,0">
                        <Frame BackgroundColor="White" HeightRequest="350" HorizontalOptions="FillAndExpand" HasShadow="False"  CornerRadius="10">
                            <StackLayout Orientation="Vertical" Spacing="10">
                                <StackLayout HorizontalOptions="CenterAndExpand">
                                    <Label Text="Information about Event" TextColor="Black" FontSize="Title" FontAttributes="Bold" />
                                </StackLayout>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <Label Text="Event Name:" FontSize="Small"  FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
                                    <Label Text="{Binding Name}"    TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"/>

                                    <Label Text="Creation Date:" FontSize="Small"  FontAttributes="Bold" Grid.Row="1" Grid.Column="0"/>
                                    <Label Text="{Binding CreationDate}"   TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="1"/>

                                    <Label Text="Reason for Creation:" FontSize="Small"  FontAttributes="Bold" Grid.Row="2" Grid.Column="0"/>
                                    <Label Text="{Binding Reason}"  TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="2" Grid.Column="1"/>

                                    <Label Text="Dumpsite Name:" FontSize="Small"  FontAttributes="Bold" Grid.Row="3" Grid.Column="0"/>
                                    <Label Text="{Binding DumpsiteName}"  TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="3" Grid.Column="1"/>

                                    <Label Text="Address:" FontSize="Small"  FontAttributes="Bold" Grid.Row="4" Grid.Column="0"/>
                                    <Label Text="{Binding Address}"  TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="4" Grid.Column="1"/>

                                    <Label Text="Number is Participants:" FontSize="Small"  FontAttributes="Bold" Grid.Row="5" Grid.Column="0"/>
                                    <Label Text="{Binding NumberOfParticipants,Mode=TwoWay}"  TextColor="Black" FontSize="Small" HorizontalOptions="FillAndExpand" Grid.Row="5" Grid.Column="1"/>

                                </Grid>

                            
                            <StackLayout Margin="10" TranslationY="30">
                                    <Button Command="{Binding JoinCommand}" Text="Join Event" TextColor="White" FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                                        BackgroundColor="#25d366" CornerRadius="25"/>
                            </StackLayout>


                    </StackLayout>
                        </Frame>
                    </StackLayout>
                </Grid>

            </StackLayout>
        </ScrollView>




    </ContentPage.Content>

</ContentPage>